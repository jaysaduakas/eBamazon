<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="viewComponent" alignment="CENTER" prefWidth="502.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Ebamazon.controller.BidComponentViewController">
   <children>
      <Label fx:id="title" alignment="CENTER" prefHeight="19.0" prefWidth="599.0" style="-fx-background-color: darkgrey;" text="Auction Title">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="44.0" prefWidth="599.0" style="-fx-background-color: lightgrey;">
         <children>
            <Label fx:id="date" alignment="BASELINE_LEFT" prefHeight="17.0" prefWidth="165.0" text="Purchase Date" />
            <Label fx:id="seller" alignment="TOP_LEFT" prefHeight="17.0" prefWidth="163.0" text="Seller Username">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <Label fx:id="price" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="74.0" text="Price" />
            <ButtonBar prefHeight="44.0" prefWidth="62.0">
              <buttons>
                <Button fx:id="gradeButton" mnemonicParsing="false" onAction="#openGrading" text="Grade" />
              </buttons>
            </ButtonBar>
         </children>
      </HBox>
   </children>
</VBox>
